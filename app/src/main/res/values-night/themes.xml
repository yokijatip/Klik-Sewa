<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KlikSewa" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/primary_black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/primary_black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/primary_black</item>
        <item name="android:textColorSecondary">@color/black</item>

        <!-- Input fields style -->
        <item name="textInputStyle">@style/Widget.KlikSewa.TextInputLayout</item>
        <item name="buttonStyle">@style/Widget.KlikSewa.Button</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_bottom</item>
        <item name="android:windowExitTransition">@android:transition/slide_bottom</item>
    </style>

    <!-- Custom TextInputLayout style -->
    <style name="Widget.KlikSewa.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_black</item>
        <item name="boxBackgroundColor">@color/soft_gray</item>
        <item name="android:textColorHint">@color/primary_black</item>
        <item name="hintTextColor">@color/primary_black</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Custom Button style -->
    <style name="Widget.KlikSewa.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Custom Text style -->
    <style name="TextAppearance.KlikSewa.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/primary_black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.KlikSewa.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/primary_black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Notification Bar -->
    <style name="Theme.YourAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Other theme attributes -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>